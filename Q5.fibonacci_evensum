# fibonacci series

def fib(x):
    if x==0 or x==1:
        return 1                         
    else:
        return fib(x-1)+  fib (x-2)

def test_fib(n):
    for i in range (n+1):
        print "fib of " , i, "=", fib(i)
   
def sum_evenfib(n):
    sum = 0
    for i in range (n+1):
        if fib(i)%2 == 0:
            sum = sum + fib (i)
    return sum
    
  
#sum of even numbers in fibbonacci series
test_fib(20)
print sum_evenfib(20)


